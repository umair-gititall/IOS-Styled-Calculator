                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:orientation="horizontal">

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="¹⁄ₓ" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="²√x" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="³√x" />

                    <Button
                        style="@style/darkButtonsLands"
