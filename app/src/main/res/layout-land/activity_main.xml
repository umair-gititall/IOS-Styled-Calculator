                        style="@style/darkButtonsLands"
                        android:text="𝑒" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="EE" />

                    <Button
                        style="@style/softButtonsLands"
                        android:text="1" />

                    <Button
                        style="@style/softButtonsLands"
                        android:text="2" />

                    <Button
                        style="@style/softButtonsLands"
                        android:text="3" />

                    <Button
                        style="@style/yellowButtonsLands"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/functions2"
                        style="@style/darkButtonsLands"
                        android:layout_marginVertical="4dp"
                        android:background="@drawable/circle"
                        android:contentDescription="Calculator Icon"
                        android:src="@drawable/calculator_solid_land" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="sinh" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="cosh" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="tanh" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="π" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="Rad" />

                    <Button
                        style="@style/softButtonsLands"
                        android:text="Rand" />

                    <Button
                        style="@style/softButtonsLands"
                        android:text="0" />

                    <Button
                        style="@style/softButtonsLands"
                        android:text="." />

                    <Button
                        style="@style/yellowButtonsLands"
                        android:text="=" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>