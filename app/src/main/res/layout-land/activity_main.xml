                        android:text="ln" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="log₁₀" />

                    <Button
                        style="@style/softButtonsLands"
                        android:text="4" />

                    <Button
                        style="@style/softButtonsLands"
                        android:text="5" />

                    <Button
                        style="@style/softButtonsLands"
                        android:text="6" />

                    <Button
                        style="@style/yellowButtonsLands"
                        android:text="─" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:orientation="horizontal">

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="x!" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="sin" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="cos" />

                    <Button
                        style="@style/darkButtonsLands"
                        android:text="tan" />

